{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "types": ["@types/node", "firebase"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true
  },
  "compileOnSave": false,
  "include": ["src"]
}
